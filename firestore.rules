rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Estas regras permitem que qualquer pessoa leia e escreva nas coleções.
    // Para um aplicativo de produção com vários usuários, você usaria
    // regras de autenticação para proteger os dados.
    // Ex: allow read, write: if request.auth != null;
    match /notes/{noteId} {
      allow read, write: if true;
    }
    match /timelines/{timelineId} {
      allow read, write: if true;
    }
  }
}
